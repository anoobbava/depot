<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
  <div class="font_family">
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% end %>
  <div class= "font_family margin-correct"%>
    <div class="form-group">
      <div class="row">
        <div class ="col-xs-2">
          <%=f.label :title, class: "control-label"%>
        </div>
        <div class="col-xs-6">
          <%=f.text_field :title, placeholder: 'enter title', class: "form-control",required: true%>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class ="col-xs-2">
          <%=f.label :description, class: "control-label"%>
        </div>
        <div class="col-xs-6">
          <%=f.text_area :description, placeholder: 'enter description', class: "form-control",
                         required: true%>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class ="col-xs-2">
          <%=f.label :price, class: "control-label"%>
        </div>
        <div class="col-xs-2">
          <%=f.text_field :price, placeholder: 'enter price', class: "form-control",
                          required: true%>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class ="col-xs-2">
          <%=f.label 'upload image', class: "control-label"%>
        </div>
        <div class="col-xs-4">
          <%= f.file_field :avatar, class: "form-control"%>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit class: "button-create-product"%>
    </div>
  </div>
<% end %>
