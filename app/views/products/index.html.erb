<div class="container font_family">
  <div class="row">
    <div class="col-md-3">
      <% @products.each do |product| %>
        <%=link_to product.title, product_path(product) %>
      <% end %>
    </div>
    <div class="col-md-9">
      <div class="caption-full">
        <% @latest_product.each do |product| %>
          <%=image_tag product.avatar.url%>
          Rs:<%=product.price%>
          <div class="ratings">
            cost: <%= rating_for product, "cost", enable_half: true%>
            durability: <%= rating_for product, "durability", enable_half: true%>
            service: <%= rating_for product, "service", enable_half: true%>
          </div>
          <% @latest_review.each do |review|%>
            <%=review.topic%>
            <%=review.description%>
          <% end %>
          <%=link_to 'Leave a Review', new_review_path, remote: true, class: "btn btn-success"%>
          <div id ="new_review"></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
  
  <%if current_user.user_name == 'admin'%> 
    <div class="table-responsive">
      <%= link_to 'New Product', new_product_path %>
    </div>
  <% end %>
