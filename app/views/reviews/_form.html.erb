<%= form_for([@product, @review]) do |f| %>
  <% if @review.errors.any? %>
    <div class="font_family">
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class= "font_family">
    <div class="form-group">
      <div class="row">
        <div class ="col-xs-2">
          <%=f.label :topic, class: "control-label"%>
        </div>
        <div class="col-xs-8">
          <%=f.text_field :topic, placeholder: 'enter topic', class: "form-control",required: true%>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class ="col-xs-2">
          <%=f.label :description, class: "control-label"%>
        </div>
        <div class="col-xs-6">
          <%=f.text_area :description, placeholder: 'enter description', class: "form-control",required: true%>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit class: "button-create-product"%>
    </div>
  </div>
<% end %>
